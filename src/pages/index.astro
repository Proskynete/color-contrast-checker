---
import LandingLayout from "../layouts/landing.layout.astro";
import { Preview } from "./sections/preview.tsx";
import { Form } from "./sections/form.tsx";
import { ContrastResult } from "./sections/contrast-result.tsx";
---

<LandingLayout>
  <section className="border rounded-xl flex flex-col md:flex-row gap-5 divide-x">
    <Form client:visible />
    <Preview client:visible />
  </section>

  <section className="w-full lg:w-3/4 mx-auto">
    <ContrastResult client:visible />
  </section>
</LandingLayout>
